    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <title>Document</title>
</head>
<body>
    <nav
    class="navbar navbar-expand navbar-dark bg-dark flex-column flex-md-row bd-navbar"
  >
    <h3 style="color: white;">Admin</h3>
    <div class="navbar-nav-scroll" style="margin-left: 5%;">
      <ul class="navbar-nav bd-navbar-nav flex-row">
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link " href="/admin/dashboard"><h5>Home</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/"><h5>Link3</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/"><h5>Link4</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link active" href="/writer/all"><h5>Writers</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/"><h5>Link6</h5></a>
        </li>
      </ul>
    </div>
  </nav>
  
    <div class="container">
            <h1>
                    List Of Writers
                </h1>
                <table class="table table-striped table-dark" border='true' style = 'width : 100%'>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <!-- <th>
                          Click To Update
                        </th>
                        <th>
                            Click Delete
                        </th> -->
                        
                    </tr>
                    <%  data.forEach(function(item){  %>
                    <tr>
                        <td><img width="50px" height="50px" src="/images/<%= item.pic%>"></td>
                        <td><%= item.name%></td>
                        <td><%= item.email%></td>
                        <!-- <td><a class = ' btn btn-warning'    href='/writer/update/<%= item._id%>'>Click To Update </a></td>
                        <td><a class = 'mylink btn btn-danger' w_id = '<%= item._id%>' onclick="(function(e){e.preventDefault();})(event)"  href='/writer/delete/<%= item._id%>'>Click To Delete </a></td> -->
                        
                    </tr>
                    <%  }) %>    




                    
            
                </table>
                <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div  class="modal-body">
                              <h2>Are You Sure To Want to delete </h2>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <button type="button" id = 'yes_button' class="btn btn-primary">Yes</button>
                            </div>
                          </div>
                        </div>
                      </div>
 
</body>

<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/bootstrap.js"></script>
<script src="/javascripts/popper.js"></script>
<script>
        $(document).ready(function(){
           
           $('.mylink').click(function(e){
           
               let writerId = $(this).attr('w_id');
               console.log(writerId)
               $('#mymodal').modal('toggle');
               $('#yes_button').click(function(){
                   console.log("deleted...")
                   window.location = `/writer/delete/${writerId}`  /// Vanilla Js 
               })
           })
        })
       </script>
</html>


